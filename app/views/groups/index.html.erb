<h1>Groups</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @groups.each do |group| %>
      <tr>
        <td><%= group.title %></td>
        <td><%= group.description %></td>
        <td><%= link_to 'Join', user_group_join_path(current_user.id, group.id) %></td>
        <td><%= link_to 'Show', user_group_path(current_user.id, group.id) %></td>
        <td><%= link_to 'Edit', edit_user_group_path(current_user.id, group) %></td>
        <td><%= link_to 'Invite', user_group_invite_path(current_user.id, group.id) %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

