<%= form_with(url: group_contents_path(@group.id), local: true, class: 'simform no-margin', autocomplete: 'off') do |form| %>
    <div class="form-group form-group-default">
      <%= form.label :title %>
      <%= form.text_field :title, id: :content_title ,  :class => 'form-control' %>
    </div>
    <div class="form-group form-group-default">

      <%= form.label :content %>
      <%= form.text_area :content, id: :content_jd,  :class => 'form-control' %>
    </div>
    <div class="form-group form-group-default">
    <%= form.file_field :image %>
    </div>

    <div class="actions">
    <%= form.submit 'Save Changes', :class => 'btn btn-primary' %>
    </div>
<% end %>